<h1>Shopping Cart</h1>

<% if session[:cart].empty? %>
	
	<h1>CART IS EMPTY!</h1>

<% else %>
	
	<table class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th>Item</th>
				<th>Price</th>
				<th>Remove</th>
			</tr>
		</thead>

		<tbody>
			<% total = 0 %>

			<% @cart_prod.each do |product| %>
				<tr>
					<td><%= product.model %></td>
					<% if product.sale_price %>
						<td><%= number_to_currency product.sale_price %></td>

						<!-- Adds the sale price to the total -->
						<% total += product.sale_price %>
					<% else %>
						<td><%= number_to_currency product.price %></td>

						<!-- Adds the price to the total -->
						<% total += product.price %>
					<% end %>

					<td><%= link_to "X", remove_from_cart_path(product.id), :class => "btn btn-danger" %></td>
				</tr>
			<% end %>

			<tr>
				<td>Total: </td>
				<td><%= number_to_currency total %></td>
			</tr>
		</tbody>
	</table>

	<%= link_to "Empty Cart", empty_cart_path, :class => "btn btn-danger" %>

<% end %>