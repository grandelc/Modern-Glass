<div class="page-header">
  <h1><%= @product.model %></h1>
</div>

<div class="col-lg-6">
    <% if @product.image_file_name.present? %>
		<p><%= image_tag @product.image.url(:large) %></p>
	<% end %>
</div>

<div class="col-lg-4 col-lg-offset-1">
	<div class="well">
		<p>You've visted this product <%= pluralize @visit_count, ' time' %></p>

		<% if @product.category %>
			<p><%= @product.category.name %></p>
		<% end %>

		<% if @product.sale_price then %>
			<h3>
				<div class="original-crossout">
					<%= number_to_currency @product.price %>
				</div>
			    <%= number_to_currency @product.sale_price %>
			</h3>
		<% else %>
			<h3><%= number_to_currency @product.price %></h3>
		<% end %><br>

		<p><%= @product.description %></p>

		<% if @product.stock_quantity.present? %>

			<%= link_to 'ADD TO CART', cart_path, :class => "btn btn-primary btn-sm active" %>

		<% else %>
			<span class="btn btn-danger btn-sm disabled">SOLD OUT</span><br><br>
			<button type="button" class="btn btn-primary btn-sm disabled">ADD TO CART</button>
		<% end %>
	</div>
</div>