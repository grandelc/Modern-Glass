<h1><%= @product.model %></h1>

<% if @product.image_filename %>
	<p><%= image_tag @product.image_filename, :width => '250' %></p>
<% end %>

<% if @product.category %>
	<p><%= @product.category.name %></p>
<% end %>

<p><%= @product.description %></p>
<p><%= number_to_currency @product.price %></p>

<%= link_to 'Back to all list', products_path %>
