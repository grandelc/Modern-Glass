<h1><%= @product.model %></h1>

<% if @product.image_file_name.present? %>
	<p><%= image_tag @product.image_file_name.url(:thumb) %></p>
<% end %>

<% if @product.category %>
	<p><%= @product.category.name %></p>
<% end %>

<p><%= @product.description %></p>
<p><%= number_to_currency @product.price %></p>
